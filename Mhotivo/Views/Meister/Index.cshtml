@using System.Linq
@*model System.Collections.Generic.IEnumerable<Mhotivo.Models.DisplayMeisterModel>*@
@using System.Web.Mvc.Html
@model PagedList.IPagedList<Mhotivo.Models.DisplayMeisterModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<h2>Maestros Registrados</h2>

<a class="toAdd" data-toggle="modal" role="button" data-id="Meister/Add" ><span class="btn btn-small btn-primary active">Agregar Maestro</span></a>

@if(!Model.Any())
{
    <div class="well well-large">
		<h4 class="blue">Tabla Vacia</h4>
		No hay registros a mostrar.
	</div>
}
else
{
    using (Html.BeginForm("Index", "Meister", FormMethod.Get, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {
        <p>
            Buscar por Nombre: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Buscar" />
        </p>
    }
    <table class="table table-striped table-bordered table-hover" id="sample-table-1">
	    <thead>
		    <tr>
				<th>@Html.DisplayNameFor(model => model.First().UrlPicture)</th>
                <th>@Html.ActionLink("Nombre Completo", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })</th>
                <th>@Html.ActionLink("Numero de Identidad", "Index", new { sortOrder = ViewBag.IdNumberSortParm }) </th>
				<th>@Html.DisplayNameFor(model => model.First().Address)</th>
				<th>@Html.DisplayNameFor(model => model.First().City)</th>
				<th>@Html.DisplayNameFor(model => model.First().State)</th>
				<th>@Html.DisplayNameFor(model => model.First().Country)</th>
                <th></th>
		    </tr>
	    </thead>
        <tbody>
        
            @foreach (var item in Model) {
                <tr>
                    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">
                        <a href="~/@Html.DisplayNameFor(model => model.First().UrlPicture)" data-rel="colorbox">
							<img alt="150x150" src="~/@Html.DisplayNameFor(model => model.First().UrlPicture)" />
							<div class="text">
							</div>
						</a>
                    </td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.FullName)</td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.IdNumber)</td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.Address)</td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.City)</td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.State)</td>
				    <td data-id="Meister/Details/@Html.DisplayFor(modelItem => item.Id)" class="toDetails">@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>
                        <a class="toEdit" data-toggle="modal" role="button" data-target="#EditModal" id="/Meister/Edit/@Html.DisplayFor(modelItem => item.Id)"><i class="icon-edit bigger-120"></i></a>
                        <a class="toDelete" role="button" id="@Html.DisplayFor(modelItem => item.Id)_Val"><i class="icon-trash bigger-120"></i></a>
                        @using (Html.BeginForm("Delete", "Meister", new { id = Html.DisplayFor(modelItem => item.Id) }, FormMethod.Post,
                            new { id = "Form_" + Html.DisplayFor(modelItem => item.Id) + "_Val", style = "display: none" })) { }
                        <input type="hidden" id="@Html.DisplayFor(modelItem => item.Id)_Val_Message"
                               value="¿Realmente desea eliminar el registro de @Html.DisplayFor(modelItem => item.FullName)?" />
                    </td>
                </tr>
            }
        </tbody>
    </table>   
    
    <p>
        Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    </p>
    @Html.PagedListPager(Model, page => Url.Action("Index",
        new {page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}));
    
}

<!-- Modal -->
<div tabindex="-1" class="modal hide fade" id="EditModal" style="display: none;" aria-hidden="true">
    <div id="body" class="modal-body">
        
    </div>
</div>