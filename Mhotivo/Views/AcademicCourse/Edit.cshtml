@using AutoMapper.Internal
@model Mhotivo.Models.AcademicCourseEditModel

@{
    ViewBag.Title = "Editar Año Académico";
    Layout = "";
}


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
<script src="~/Scripts/jquery.maskedinput.min.js"></script>

<div id="body" class="modal-body" style="max-height: 500px;">
    @using (Html.BeginForm("Edit", "AcademicCourse", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {@Html.ValidationSummary(true)

        <fieldset>
            <legend>Editar Curso Académico</legend>

            @Html.HiddenFor(model => model.Id)
            <p class="text-error">
                @Html.ValidationMessageFor(model => model.Schedule)
                @Html.ValidationMessageFor(model => model.Teacher)
            </p>

            <div class="control-group">
                <div class="control-label">
                    @Html.DisplayNameFor(model => model.Schedule)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Schedule)
                </div>
            </div>
            
            <div class="control-group">
                <div class="control-label">
                    @Html.DisplayNameFor(model => model.Teacher)
                </div>
                <div class="controls">
                    @Html.DropDownListFor(model => model.Teacher, new SelectList(ViewBag.TeacherId, "Value", "Text"), "  -- Maestro --")
                </div>
            </div>
            <div class="space"></div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-small">
                    <i class="icon-remove"></i>
                    Cancel
                </button>

                <button type="submit" class="btn btn-small btn-primary">
                    <i class="icon-ok"></i>
                    Actualizar
                </button>
            </div>
        </fieldset>
    }
</div>