@model Mhotivo.Models.CreateHomeworkModel

@{
    ViewBag.Title = "Nueva Tarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("~/Views/Shared/_MessageArea.cshtml")

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div id="body" class="modal-body" style="max-height: 500px;">
    @using (Html.BeginForm("Create", "Homework", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Nueva Tarea</legend>

            <p class="text-error">
                @Html.ValidationMessageFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.DeliverDate)
                @Html.ValidationMessageFor(model => model.Points)
                @Html.ValidationMessageFor(model => model.AcademicYearId)
                @Html.ValidationMessageFor(model => model.AcademicYearDetail.AcademicYear.Grade)
                @Html.ValidationMessageFor(model => model.AcademicYearDetail.AcademicYear.Section)
                @Html.ValidationMessageFor(model => model.AcademicYearDetail.AcademicYear.Year)
            </p>

            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Title)
                </div>
            </div>

            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Description)
                </div>
            </div>
            <div class="control-group">
                <div style="float: left; width: 250px;">

                    <div class="control-group" style="float: left; width: 250px;">
                        <div class="row-fluid input-append">
                            @Html.TextBoxFor(model => model.DeliverDate, new { @class = "date-picker", @data_date_format = "dd-mm-yyyy", @readonly = true })
                            <span class="add-on">
                                <i class="icon-calendar"></i>
                            </span>
                            <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.DeliverDate)</span>
                            <p class="text-error">@Html.ValidationMessageFor(model => model.DeliverDate)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.Points)
                </div>
                <div class="controls">
                    @Html.EditorFor(model => model.Points)
                </div>
            </div>

            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.AcademicYearId)
                </div>
                <div class="controls">
                    @Html.DropDownList("Year")
                </div>
            </div>

            <div class="space"></div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-small">
                    <i class="icon-remove"></i>
                    Cancelar
                </button>
                <button type="submit" class="btn btn-small btn-primary">
                    <i class="icon-ok"></i>
                    Crear
                </button>
            </div>
        </fieldset>
    }
</div>