@using System.Web.Mvc.Html
@model Mhotivo.Models.AcademicYearRegisterModel

@{
    ViewBag.Title = "Agregar Año Académico";
    Layout = "";
}


<script src="~/Scripts/jquery-2.1.0.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<div id="body" class="modal-body" style="max-height: 500px;">
    @using (Html.BeginForm("Add", "AcademicYear", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {
        @Html.ValidationSummary(true)
        <h2>Agregar Año Académico</h2>

        <div id="address" style="width: 500px;">
            <div id="mainAddress">
                @Html.EditorFor(x => x.Year, new {htmlAttributes = new {min = 1980, max = 2200} })
                <br /><span class="InputLabel">@Html.DisplayNameFor(model => model.Year)</span>
                <p class="text-error">@Html.ValidationMessageFor(model => model.Year)</p>
            </div>
        </div>

        <div>
            <p>
                <a href="../AcademicYear/Index" data-dismiss="modal" class="btn btn-small">
                    <i class="icon-remove"></i>
                    Cancel
                </a>

                <button type="submit" class="btn btn-small btn-primary">
                    <i class="icon-ok"></i>
                    Agregar
                </button>
            </p>
        </div>

    }
</div>