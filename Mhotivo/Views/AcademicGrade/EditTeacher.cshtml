@model Mhotivo.Models.AcademicGradeTeacherAssignModel

@{
    Layout = null;
}

<div id="body" class="modal-body" style="max-height: 500px;">
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm("EditTeacher", "AcademicGrade", FormMethod.Post, new { id = "Form", @class = "form-horizontal", @Style = "margin:0;" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <h2>Asignar Maestro a Seccion</h2>

            @Html.HiddenFor(model => model.Id)
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.SectionTeacher)
                </div>
                <div class="controls">
                    @Html.DropDownList("SectionTeacher", (SelectList)ViewBag.SectionTeacher)
                    @Html.ValidationMessageFor(model => model.SectionTeacher)
                </div>
            </div>

            <div class="space"></div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-small">
                    <i class="icon-remove"></i>
                    Cancelar
                </button>

                <button type="submit" class="btn btn-small btn-primary">
                    <i class="icon-ok"></i>
                    Actualizar
                </button>
            </div>
        </fieldset>
    }
</div>