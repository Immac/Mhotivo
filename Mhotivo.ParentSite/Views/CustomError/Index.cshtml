@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css"/>

<div class="nicdark_space100"></div>
<div class="nicdark_space100"></div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <section class="nicdark_section form-horizontal">
                <div class="grid nicdark_border_grey nicdark_shadow ">
                    <div class="nicdark_textevidence nicdark_bg_blue nicdark_radius_top">
                        <h4 class="nicdark_margin1820" style="color: white; font-size: 20px; font-weight: bold">Error Desconocido</h4>
                        <i class="icon-cancel nicdark_iconbg right nicdark_marginright20 medium white"></i>
                    </div>
                    <div class="nicdark_space10"></div>

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <h2 class="error">Por favor tome nota de lo que hacía y contacte al Administrador del sitio.</h2>
                        </div>
                    </div>
                </div>
                <div class="nicdark_space100"></div>
                <div class="nicdark_space70"></div>
            </section>
        </div>
    </div>
</div>