@model Mhotivo.ParentSite.Models.ChangePasswordModel

@{

    ViewBag.Title = "Cmbiar Contraseña";
    Layout = "~/Views/Shared/_LayoutSmall.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
<div class="nicdark_space100"></div>
<div class="nicdark_space100"></div>
<div class="nicdark_space70"></div>
<div class="container  icon-ajust">
    <div class="row">
        <div class="col-md-6 col-md-offset-3  ">
            <section class="nicdark_section">
                @using (Html.BeginForm("ChangePassword", "Account", null, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <fieldset>
                            <div class="grid nicdark_border_grey nicdark_shadow ">
                                <div class="nicdark_textevidence nicdark_bg_orange nicdark_radius_top">
                                    <h4 class="nicdark_margin1820" style="color:white; font-size:20px; font-weight:bold">CAMBIAR CONTRASEÑA</h4>
                                    <i class="icon-users nicdark_iconbg right nicdark_marginright20 medium white"></i>
                                </div>
                                <div class="nicdark_space10"></div>


                                <div class=" form-group  ">
                                    <label class="col-md-4 control-label">Contraseña Actual</label>
                                    <div class="col-md-5 col-md-offset-1">
                                        @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", placeholder = "Contraseña Actual", type = "password", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-md-4 control-label ">Contraseña Nueva</label>
                                    <div class="col-md-5 col-md-offset-1">
                                        @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", placeholder = "Contraseña Nueva", type = "password", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="col-md-4 control-label">Confirmar Contraseña</label>
                                    <div class="col-md-5 col-md-offset-1">
                                        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control ", placeholder = "Confirmar Contraseña ", type = "password", required = "required" })
                                    </div>
                                </div>
                                <div class="form-group size">
                                    <div class="col-md-12 text-right">
                                        <input class="nicdark_btn nicdark_bg_orange small nicdark_shadow nicdark_radius white nicdark_press" type="submit" value="CAMBIAR">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                    <div class="nicdark_space100"></div>
                    <div class="nicdark_space20"></div>
                </section>
</div>
    </div>
</div>

@{
    if (null != ViewBag.Message)
    {
        <text>
            <script type="text/javascript">
                alert("@ViewBag.Message");
            </script>
        </text>
    }
}